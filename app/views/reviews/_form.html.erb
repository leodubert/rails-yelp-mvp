

<%= simple_form_for(restaurant, review) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATINGS %>
    <%= f.input :phone_number %>
  </div>

  <div class="form-actions", class: "btn btn-primary" >
    <%= f.button :submit %>
  </div>
<% end %>
